<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Instructors</h3>
  </div>
  <div class="panel-body">
  
  <table class="table">
  <thead>
    <tr class="row">
      <th>Last name</th>
      <th>First name</th>
      <th>Hire date</th>
      <th colspan="3"></th>
    </tr class="row">
  </thead>

  <tbody>
    <% @instructors.each do |instructor| %>
      <tr class="row">
        <td><%= instructor.last_name %></td>
        <td><%= instructor.first_name %></td>
        <td><%= instructor.hire_date %></td>
        <td><%= link_to 'Show', instructor, :class => "btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_instructor_path(instructor), :class => "btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', instructor, :class => "btn-warning btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Instructor', new_instructor_path %>
