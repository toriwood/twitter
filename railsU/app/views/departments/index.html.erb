<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Departments</h3>
  </div>
  <div class="panel-body">
  
  <table class="table">
  <thead>
    <tr class="row">
      <th>Name</th>
      <th>Budget</th>
      <th>Start date</th>
      <th>Instructor</th>
      <th colspan="3"></th>
    </tr class="row">
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr class="row">
        <td><%= department.name %></td>
        <td><%= department.budget %></td>
        <td><%= department.start_date %></td>
        <td><%= department.instructor.first_name %></td>
        <td><%= link_to 'Show', department, :class => "btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_department_path(department), :class => "btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', department, :class => "btn-warning btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

